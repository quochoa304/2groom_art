    <style>
          .image-container {
            margin-top: 150px;
            display: flex;
            justify-content: center;
            gap: 60px;
          }

          .image-item {
            display: flex;
            align-items: stretch; /* Giữ chiều cao đồng đều */
            gap: 15px;
            width: 45%;
            max-width: 400px;
          }

          .image-item img {
            width: 70%;
            height: auto;
            border-radius: 8px;
          }

          .image-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            text-align: left;
          }

          .image-info h3 {
            margin: 0;
            font-size: 16px;
            color: #333;
          }

          .image-info p {
            margin: 5px 0 0;
            font-size: 14px;
            color: #666;
          }

          .btn {
            display: inline-block;
            width: 120%;
            margin-top: auto; /* Đẩy nút xuống đáy */
            padding: 8px 12px;
            color: rgb(216, 34, 34);
            text-decoration:underline;
            border-radius: 5px;
            font-size: 14px;
            text-align: center;
          }

          .btn:hover {
            color: brown;
          }

          @media (max-width: 1000px) {
        .image-info {
          display: none;
        }
        .image-container {
            margin-right: -40px;
            padding: 30px;
          }
          .image-item img{
            width: 95%;
          }

         
