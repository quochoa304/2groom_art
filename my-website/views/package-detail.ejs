<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Package Detail</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('partials/header') %>

  <div class="containert mt-4">
    <h1 class="text-center">Package Detail</h1>
    <a href="/packages" class="btn btn-secondary mt-3 " style="margin: 20px;">Back to Packages</a>
    <div class="row" style="padding: 30px;">
      <% if (images.length > 0) { %>
        <% images.forEach(image => { %>
          <div class="col-md-4 mb-3">
            <img src="<%= image %>" class="img-fluid rounded shadow-sm" alt="Package Image">
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-center">No images available for this package.</p>
      <% } %>
    </div>


  </div>
  <%- include('partials/footer') %>

</body>
</html>
